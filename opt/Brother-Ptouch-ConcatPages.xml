<option type='bool' id='Brother-Ptouch-ConcatPages'>
  <comments>
    <en>Remove interpage margins and trailing vertical space on the
    final page, printing everything in one page.
    </en>
  </comments>
  <arg_longname>
    <en>Concatenate Pages</en>
  </arg_longname>
  <arg_shortname>
    <en>ConcatPages</en><!-- backends only know <en> shortnames! -->
  </arg_shortname>
  <arg_shortname_false>
    <en>IndividualPages</en><!-- backends only know <en> shortnames! -->
  </arg_shortname_false>
  <arg_execution>
    <arg_group>General</arg_group>
    <arg_order>110</arg_order>
    <arg_spot>B</arg_spot>
    <arg_substitution />
    <arg_proto> ConcatPages </arg_proto>
  </arg_execution>
  <constraints>
    <constraint sense='true'>
      <driver>ptouch</driver>
      <arg_defval>0</arg_defval>
    </constraint>
  </constraints>
</option>
